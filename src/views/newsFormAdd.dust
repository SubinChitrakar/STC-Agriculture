{>"layout" /}

{<heading}
<h1><a href="/news"><i class="fas fa-arrow-circle-left"></i></a>
    &nbsp; &nbsp; Add News</h1>
{/heading}

<style>
    .news-heading {
        font-size: 24px;
        font-weight: bold;
        margin: 20px 0;
        padding: 30px 20px;
    }
</style>

{<information}
<form class="form-horizontal" action="/news/submitNews" method="post">
    <input type="text" class="form-control news-heading" name="title" placeholder="Heading" required>

    <textarea rows="20" class="form-control" name="content" placeholder="Content"></textarea>

    <div class="form-group" style="margin: 3% auto;">
        <div class="pull-right">
            <button type="submit" class="btn btn-primary" id="addFertilizer"><i class="fas fa-plus-square"></i>&nbsp;&nbsp;Add News
            </button>
            &nbsp; &nbsp;
            <button type="reset" class="btn btn-warning"><i class="fas fa-sync-alt"></i>&nbsp;&nbsp;Clear
            </button>
        </div>
    </div>
</form>
{/information}
